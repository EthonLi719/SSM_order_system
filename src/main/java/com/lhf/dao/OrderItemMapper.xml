<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lhf.dao.OrderItemMapper">

    <resultMap id="OrderItemResultMap" type="com.lhf.po.OrderItem">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
    </resultMap>

    <insert id="insert" parameterType="com.lhf.po.OrderItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_item (order_id, product_id, quantity, price)
        VALUES (#{orderId}, #{productId}, #{quantity}, #{price})
    </insert>

    <update id="update" parameterType="com.lhf.po.OrderItem">
        UPDATE order_item
        <set>
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="price != null">price = #{price},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM order_item WHERE id = #{id}
    </delete>

    <delete id="deleteByOrderId">
        DELETE FROM order_item WHERE order_id = #{orderId}
    </delete>

    <select id="findById" resultMap="OrderItemResultMap">
        SELECT * FROM order_item WHERE id = #{id}
    </select>

    <select id="findByOrderId" resultMap="OrderItemResultMap">
        SELECT * FROM order_item WHERE order_id = #{orderId}
    </select>

    <select id="findByProductId" resultMap="OrderItemResultMap">
        SELECT * FROM order_item WHERE product_id = #{productId}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM order_item
    </select>

    <select id="countByOrderId" resultType="int">
        SELECT COUNT(*) FROM order_item WHERE order_id = #{orderId}
    </select>

    <select id="countByProductId" resultType="int">
        SELECT COUNT(*) FROM order_item WHERE product_id = #{productId}
    </select>

</mapper>